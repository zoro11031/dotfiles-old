        bindsym Mod4+s exec grimshot save screen 
        bindsym Mod4+Control+s exec grimshot save window
##Hide Mouse Cursor
      exec_always  unclutter
      exec  unclutter -idle 30
      
      exec swayidle -w \
          timeout 600 'swaylock -f -c 000000' \
          timeout 1800 'swaymsg "output * dpms off"' resume 'swaymsg "output * dpms on"' \
          before-sleep 'swaylock -f -c 000000'
#
# This will lock your screen after 600 seconds of inactivity, then turn off
# your displays after another 1000 seconds, and turn your screens back on when
# resumed. It will also lock your screen before your computer goes to sleep.
