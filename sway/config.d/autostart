	#exec_always env --u WAYLAND_DISPLAY ibus
	#exec --no-startup-id fcitx -d
	exec_always --no-startup-id fcitx5 -d

##Nightlight
	exec gammastep-indicator

##Autotiling Script
	exec_always autotiling 

##Polkit (GUI authenticator)
	exec --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1
       # exec_always lxpolkit

##Clipboard	
	exec_always /home/petergriffin/.config/sway/scripts/clipboard.sh

##Bluetooth Applet
	exec_always blueman-applet


##Autohide Mouse Cursor
      exec_always  unclutter
      exec  unclutter -idle 30
      
##Idle Timer      
      exec swayidle -w \
          timeout 1800 'swaylock -f -c 000000' \
          timeout 2200 'swaymsg "output * dpms off"' resume 'swaymsg "output * dpms on"' \
          before-sleep 'swaylock -f -c 000000'

##Audio Equalizer

exec_always easyeffects --gapplication-service

#Bitwarden

exec flatpak run com.bitwarden.desktop

for_window [class="Bitwarden"] mark "passwords", floating enable

